{
  "manifest_version": 3,
  "name": "CCC ATH",
  "version": "2.0",
  "description": "Reverse roblox privating friends list of UK players due to privacy act",
  "permissions": ["storage"],
  "host_permissions": [
    "https://friends.roblox.com/*",
    "https://thumbnails.roblox.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.roblox.com/users/*/friends",
        "https://www.roblox.com/users/*/profile*"
      ],
      "js": ["ccc.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "CCC ATH"
  }
}
